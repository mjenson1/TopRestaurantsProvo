@{
    ViewBag.Title = "Suggestions";
}

@model IEnumerable<TopRestaurantsProvo.Models.SuggestionResponse>

<head>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        .center {
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head> <!--I included this cuz I wanted my table to have the boxes.-->
<div class="text-center">
    <h2>Here are your suggestions:</h2>
    <table class="center">
        <thead>
            <tr><th>Customer Name: </th><th>Restaurant Name: </th><th>Favorite Dish: </th><th>Restaurant Phone: </th><th>Suggestion: </th></tr>
        </thead>

        <tbody>
            @foreach (TopRestaurantsProvo.Models.SuggestionResponse s in Model)    @* Lists each of the suggestions *@
            {
                <tr>
                    <td>@s.CustName</td>
                    <td>@s.RestName</td>
                    <td>@s.FaveDish</td>
                    <td>@s.RestPhone</td>
                    <td>@s.Suggestion</td>
                </tr>
            }
        </tbody>
    </table>
</div>